{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "types": [
      "node",
      "hammerjs"
    ]
  },
  "files": [
		"./app/components/main.ts",
    "./app/components/app.component.ts",
    "./app/components/app.module.ts",
		"./app/vendor.ts"
	],
  "exclude": [
    "node_modules"
  ],
  "lib": ["es6", "es2015"],
  "compileOnSave": true
}