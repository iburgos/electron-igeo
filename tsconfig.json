{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    // "noEmitOnError": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}